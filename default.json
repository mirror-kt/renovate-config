{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":timezone(Asia/Tokyo)",
        "group:monorepos"
    ],
    "dockerfile": {
        "fileMatch": [
            "^(?:.*\\.)?Dockerfile$"
        ]
    },
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true
        }
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "recreateWhen": "always",
        "rebaseStalePrs": true,
        "schedule": [
            "before 4am on monday"
        ]
    },
    "commitMessagePrefix": "⬆️ ",
    "labels": [
        "dependencies"
    ],
    "prHourlyLimit": 0,
    "prConcurrentLimit": 0
}